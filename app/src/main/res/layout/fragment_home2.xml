
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardBackgroundColor="#e9e9e9"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="6dip"
        >
        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icon_home"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="6dip"
                android:contentDescription="TODO"
                android:src="@drawable/index2" />
            <LinearLayout
                android:layout_alignBottom="@id/icon_home"
                android:layout_alignRight="@id/icon_home"
                android:layout_width="match_parent"
                android:gravity="right"
                android:background="@android:color/background_dark"
                android:alpha="0.5"
                android:layout_height="50dp">


            </LinearLayout>
            <TextView
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_alignBottom="@id/icon_home"
                android:layout_alignRight="@id/icon_home"
                android:layout_height="wrap_content"
                android:text="start from \n Rp. 300.000,- \n per person"
                />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                style="?android:attr/ratingBarStyleIndicator"
                android:progressBackgroundTint="@android:color/holo_red_light"
                android:progressTint="@android:color/holo_red_light"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="1"
                />
        </RelativeLayout>
        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_alignBottom="@id/layout1"
            android:layout_marginLeft="5dp"
            android:id="@+id/profile_image"
            android:layout_marginBottom="-25dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile_photo" />
        <TextView
            android:id="@+id/place_holder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/profile_image"

            android:layout_below="@id/layout1"

            android:gravity="center_vertical"
            android:text="Cave Mountain"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/firstLine"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"

            android:layout_below="@id/profile_image"

            android:gravity="center_vertical"
            android:text="Example application"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/secondLine"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/firstLine"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Description"
            android:textSize="12sp" />



    </RelativeLayout>
</android.support.v7.widget.CardView>
