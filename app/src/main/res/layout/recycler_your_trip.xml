<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@android:color/white"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:id="@+id/icon_book"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/my_booking"/>

    <LinearLayout
        android:id="@+id/detail"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/icon_book"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/kotaManag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cave Trip"/>
        <TextView
            android:id="@+id/tanggalManag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maks 10 person"/>
        <TextView
            android:id="@+id/jumlahManag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button

            android:layout_marginRight="10dp"
            android:id="@+id/buttonEditYourTrip"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/edit_yourtrip"
            />
    <Button
        android:layout_marginRight="10dp"
        android:id="@+id/buttonCommentYourTrip"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/comment_yourtrip"
       />

        <Button

            android:layout_marginRight="10dp"
            android:id="@+id/buttonDeleteYourTrip"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/delete_yourtrip"
            />

    </LinearLayout>
</RelativeLayout>